<?xml version="1.0" encoding="utf-8"?>
<layout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp3"
        android:background="@color/white"
        android:elevation="@dimen/dp5"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/dp5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dimen_5dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/dp5"

                >



                <ImageView
                    android:id="@+id/vegnvwithoutimageIV"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp20"
                    android:layout_margin="@dimen/dp5"
                    android:visibility="gone"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"

                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp5"
                            android:layout_weight="0.6"
                            android:orientation="vertical">

                            <com.project.quayobasket.customFont.TextViewBoldFont
                                android:id="@+id/nameTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/dp3"
                                android:paddingRight="3dp"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.project.quayobasket.customFont.TextViewAirenregular
                                    android:id="@+id/priceTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/dp3"
                                    android:paddingRight="3dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />


                                <com.project.quayobasket.customFont.TextViewAirenregular
                                    android:id="@+id/strikepriceTV"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dp5"
                                    android:paddingLeft="@dimen/dp5"
                                    android:paddingRight="3dp"
                                    android:textColor="@color/black"
                                    android:textSize="12sp" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp3"
                            android:layout_weight="0.4"
                            android:orientation="vertical"


                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:gravity="end"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/minusTV"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:background="@drawable/orangecircle"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5dp"
                                    android:src="@drawable/minus" />


                                <com.project.quayobasket.customFont.TextViewAirenregular
                                    android:id="@+id/qtyTV"
                                    android:layout_width="40dp"
                                    android:layout_height="30dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:background="@drawable/addtocart"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/plusTV"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:background="@drawable/orangecircle"
                                    android:gravity="center"
                                    android:padding="@dimen/dimen_5dp"
                                    android:src="@drawable/add" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <com.project.quayobasket.customFont.TextViewBoldFont
                        android:id="@+id/descrTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:paddingLeft="@dimen/dp3"
                        android:paddingRight="3dp"
                        android:textColor="@color/dimgrey"
                        android:textSize="10sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>